---
import Section from '@/components/Section.astro'

import { projects } from '@cv'
---

<Section title="Projects">
    <ul>
        {
            projects.map(({github, description, highlights, name, isActive}) =>{
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a href={github} title={`Watch the project ${name}`} target="_blank">
                                        {name}
                                    </a>  
                                    {
                                        isActive && <span>&bull;</span>
                                    }
                                </h3>  
                                <p>{description}</p>
                            </header>
                            <footer>
                                {
                                    highlights.map((highlight) => {
                                        return (
                                            <span>{highlight}</span>
                                        )
                                    })
                                }
                            </footer>
                        </article>    
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }
    
    article{
        border-radius: 10px;
        border: 3px solid #777;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header{
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    article a {
        color: #999;
    }

    article a:hover{
        text-decoration: underline;
    }

    article p {
        font-size: 0.85rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    article h3 span {
        color: #03d306;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.9rem;
    }

    footer span {
        border-radius: 6px;
        background: #1f1f1f;
        color: #888;
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>
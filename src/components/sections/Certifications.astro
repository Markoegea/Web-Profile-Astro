---
import Section from '@/components/Section.astro'

import { certificates } from '@cv'
---

<Section title="Certifications">
    <ul>
        {certificates.map(({name, date, issuer, ID, url}) => {

            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3><a href={url} target="_blank">{name}</a> </h3>
                                <h4>{issuer}</h4>
                            </div>
                            <time>{date.replaceAll("-","/")}</time>
                        </header>

                        <footer>
                            <p>{ID}</p>
                        </footer>
                    </article>
                </li>
        )})}
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    article h3 {
        font-weight: 500;
        color: #999;
    }

    article h4 {
        color: #acacac;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    time {
        color: #747373;
        font-size: 0.85rem;
    }
</style>